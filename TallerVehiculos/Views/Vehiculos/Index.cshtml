<script src="/js/deleteDialog.js"></script>
 <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable();

            // Delete item
            sc_deleteDialog.openModal('deleteItem', true, 'btnYesDelete', '/Vehiculos/Delete/', false);
        });
    </script> }








